{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"pipaliyaatul/multi-client",
            "hostname": "client",
            "essential":false

        },       
        {
            "name":"server",
            "image":"pipaliyaatul/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"pipaliyaatul/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"pipaliyaatul/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "links":["client","server"]        
        }
    ]
}
